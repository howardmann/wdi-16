<!DOCTYPE html>
<html>
<head>
  <title>Tunr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:success] %>
    <h1><%= flash[:success] %></h1>
  <% end %>

  <% if flash[:error] %>
    <h1><%= flash[:error] %></h1>
  <% end %>

  <nav>
    <%= link_to "All Users", users_path %><br>
    <%= link_to "Sign Up", new_user_path %><br>

    <% unless @current_user.present? %>
      <%= link_to "Login", login_path %><br>
    <% else %>

      <%= link_to( "Edit your profile", edit_user_path(@current_user.id) ) %><br>
      <%= link_to("Log out #{@current_user.email}", logout_path, :method => :delete) %><br>
      You are logged in as <%= @current_user.name %>
    <% end %>
  </nav>

  <%= yield %>

</body>
</html>
